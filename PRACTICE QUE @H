// AREA OF A SQUARE USING FLOAT
===================================INPUT============================================
#include<stdio.h>
int main (){
   float side;
   printf("ENTER SIDE:");
   scanf("%f",&side);
   
   printf("AREA IS :%f", side*side);
       return 0;
}
==================================================OUTPUT=======================
